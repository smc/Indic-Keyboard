<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
>
    <switch>
        <case
            latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >
            <Key latin:keyLabel="" />

            <!--X ঁ BENGALI SIGN CANDRABINDU-->
            <Key
                latin:keyLabel="&#x0981;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--C ণ BENGALI LETTER NNA-->
            <Key
                latin:keyLabel="&#x09A3;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <Key latin:keyLabel="" />
            <Key latin:keyLabel="" />
            <Key latin:keyLabel="" />

            <!--M শ BENGALI LETTER SHA-->
            <Key
                latin:keyLabel="&#x09B6;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--\< ষ BENGALI LETTER SSA-->
            <Key
                latin:keyLabel="&#x09B7;"
                latin:moreKeys="&lt;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--\> ৤  -->
            <Key
                latin:keyLabel="&#x09E4;"
                latin:moreKeys="&gt;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--\? য BENGALI LETTER YA-->
            <Key
                latin:keyLabel="&#x09AF;"
                latin:moreKeys="\?"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />
        </case>

        <default>
            <Key latin:keyLabel="" />

            <!--x ং BENGALI SIGN ANUSVARA-->
            <Key
                latin:keyLabel="&#x0982;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--c ম BENGALI LETTER MA-->
            <Key
                latin:keyLabel="&#x09AE;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--v ন BENGALI LETTER NA-->
            <Key
                latin:keyLabel="&#x09A8;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <Key latin:keyLabel="" />

            <!--n ল BENGALI LETTER LA-->
            <Key
                latin:keyLabel="&#x09B2;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--m স BENGALI LETTER SA-->
            <Key
                latin:keyLabel="&#x09B8;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <Key
                latin:keyLabel="&#x0CB7;"
                latin:moreKeys=","
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />
            <Key
                latin:keyLabel="&#x0CE5;"
                latin:moreKeys="."
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />

            <!--/ য় BENGALI LETTER YYA-->
            <Key
                latin:keyLabel="&#x09DF;"
                latin:moreKeys="/"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />
         </default>
    </switch>
</merge>

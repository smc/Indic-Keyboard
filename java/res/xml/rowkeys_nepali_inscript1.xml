<merge xmlns:latin="http://schemas.android.com/apk/res-auto">
    <switch>
        <case latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted" >
            <Key
                latin:keySpec="&#x0CCA;"
                latin:moreKeys="`"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="1"
                latin:moreKeys="!text/morekeys_symbols_1"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="2"
                latin:moreKeys="!text/morekeys_symbols_2"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="3"
                latin:moreKeys="!text/morekeys_symbols_3"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="4"
                latin:moreKeys="!text/morekeys_symbols_4"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="5"
                latin:moreKeys="!text/morekeys_symbols_5"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="6"
                latin:moreKeys="!text/morekeys_symbols_6"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="7"
                latin:moreKeys="!text/morekeys_symbols_7"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="8"
                latin:moreKeys="!text/morekeys_symbols_8"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="9"
                latin:moreKeys="!text/morekeys_symbols_9"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="0"
                latin:moreKeys="!text/morekeys_symbols_0"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="-"
                latin:moreKeys="&#x2013;,&#x2014;,&#x00B7;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0CC3;"
                latin:moreKeys="="
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
        </case>
        <default>
            <Key
                latin:keySpec="&#x0C92;"
                latin:moreKeys="~"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="!"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="\@"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="\#"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&#x20b9;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="%"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="^"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&amp;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="*"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="("
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec=")"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!--_ ः DEVANAGARI SIGN VISARGA-->
            <Key
                latin:keySpec="&#x0903;"
                latin:moreKeys="_"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!--\+ ृ DEVANAGARI VOWEL SIGN VOCALIC R-->
            <Key
                latin:keySpec="&#x0943;"
                latin:moreKeys="+, &#x00B1;,&#x00D7;,&#x00F7;,&#x221A;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
        </default>
    </switch>
</merge>

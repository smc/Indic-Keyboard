<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
>
    <switch>
        <case latin:keyboardLayoutSetElement="alphabet|alphabetAutomaticShifted" >
            <Key
                latin:keySpec="`"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&#x09E7;"
                latin:moreKeys="1,!text/morekeys_symbols_1"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&#x09E8;"
                latin:moreKeys="2,!text/morekeys_symbols_2"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&#x09E9;"
                latin:moreKeys="3,!text/morekeys_symbols_3"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&#x09EA;"
                latin:moreKeys="4,!text/morekeys_symbols_4"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&#x09EB;"
                latin:moreKeys="5,!text/morekeys_symbols_5"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&#x09EC;"
                latin:moreKeys="6,!text/morekeys_symbols_6"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&#x09ED;"
                latin:moreKeys="7,!text/morekeys_symbols_7"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&#x09EE;"
                latin:moreKeys="8,!text/morekeys_symbols_8"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&#x09EF;"
                latin:moreKeys="9,!text/morekeys_symbols_9"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="&#x09E6;"
                latin:moreKeys="0,!text/morekeys_symbols_0"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="-"
                latin:moreKeys="&#x2013;,&#x2014;,&#x00B7;"
                latin:keyLabelFlags="fontNormal" />

            <!--\= ৃ BENGALI VOWEL SIGN VOCALIC R-->
            <Key
                latin:keySpec="&#x09C3;"
                latin:moreKeys="="
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
        </case>
        <default>
            <Key
                latin:keySpec="~"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!-- \\! &#x985; অ্যা -->
            <Key
                latin:keySpec="&#x985;"
                latin:moreKeys="!"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="\@"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--\# ্র  -->
            <Key
                latin:keySpec="&#x09CD;"
                latin:moreKeys="\#"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--\$ র্  -->
            <Key
                latin:keySpec="&#x09B0;"
                latin:moreKeys="&#x20b9;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--\% জ্ঞ  -->
            <Key
                latin:keySpec="&#x099C;"
                latin:moreKeys="%"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--\^ ত্র  -->
            <Key
                latin:keySpec="&#x09A4;"
                latin:moreKeys="^"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--\& ক্ষ  -->
            <Key
                latin:keySpec="&#x0995;"
                latin:moreKeys="&amp;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--\* শ্র  -->
            <Key
                latin:keySpec="&#x09B6;"
                latin:moreKeys="*"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--\( ‍ ZERO WIDTH JOINER-->
            <Key
                latin:keySpec="!icon/zwj_key|&#x200D;"
                latin:moreKeys="("
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--\) ‌ ZERO WIDTH NON-JOINER-->
            <Key
                latin:keySpec="!icon/zwnj_key|&#x200C;"
                latin:moreKeys=")"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--_ ঃ BENGALI SIGN VISARGA-->
            <Key
                latin:keySpec="&#x0983;"
                latin:moreKeys="_"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--\+ ঋ BENGALI LETTER VOCALIC R-->
            <Key
                latin:keySpec="&#x098B;"
                latin:moreKeys="+, &#x00B1;,&#x00D7;,&#x00F7;,&#x221A;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
        </default>
    </switch>

</merge>

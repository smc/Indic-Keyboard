<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
>
    <switch>
        <case
            latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >
            <Key latin:keySpec="&#x0020;" />
            <!--X ঁ BENGALI SIGN CANDRABINDU-->
            <Key
                latin:keySpec="&#x0981;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!--C ণ BENGALI LETTER NNA-->
            <Key
                latin:keySpec="&#x09A3;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key latin:keySpec="&#x0020;" />
            <Key latin:keySpec="&#x0020;" />
            <Key latin:keySpec="&#x0020;" />
            <!--M শ BENGALI LETTER SHA-->
            <Key
                latin:keySpec="&#x09B6;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!--\< ষ BENGALI LETTER SSA-->
            <Key
                latin:keySpec="&#x09B7;"
                latin:moreKeys="&lt;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!--\> । DEVANAGARI DANDA-->
            <Key
                latin:keySpec="&#x0964;"
                latin:moreKeys="&gt;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!--\? য BENGALI LETTER YA-->
            <Key
                latin:keySpec="&#x09AF;"
                latin:moreKeys="\?"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
        </case>

        <default>
            <Key latin:keySpec="&#x0020;" />
            <!--x ং BENGALI SIGN ANUSVARA-->
            <Key
                latin:keySpec="&#x0982;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!--c ম BENGALI LETTER MA-->
            <Key
                latin:keySpec="&#x09AE;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!--v ন BENGALI LETTER NA-->
            <Key
                latin:keySpec="&#x09A8;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key latin:keySpec="&#x0020;" />
            <!--n ল BENGALI LETTER LA-->
            <Key
                latin:keySpec="&#x09B2;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!--m স BENGALI LETTER SA-->
            <Key
                latin:keySpec="&#x09B8;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec=","
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="."
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!--/ য় BENGALI LETTER YYA-->
            <Key
                latin:keySpec="&#x09DF;"
                latin:moreKeys="/"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
         </default>
    </switch>
</merge>

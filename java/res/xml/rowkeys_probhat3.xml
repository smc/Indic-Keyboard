<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
>
    <switch>
        <case
        latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >
            <Key
                latin:keyLabel="&#x09AF;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keyLabel="&#x09DD;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keyLabel="&#x099B;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keyLabel="&#x098B;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keyLabel="&#x09AD;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keyLabel="&#x09A3;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keyLabel="&#x0999;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keyLabel="&#x09C3;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keyLabel="&#x0981;"
                latin:keyLabelFlags="fontNormal" />
        </case>

        <default>
            <Key
                latin:keyLabel="&#x09DF;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keyLabel="&#x09B6;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keyLabel="&#x099A;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keyLabel="&#x0986;"
                latin:keyLabelFlags="fontNormal|followKeyLargeLabelRatio" />
            <Key
                latin:keyLabel="&#x09AC;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keyLabel="&#x09A8;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keyLabel="&#x09AE;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keyLabel="&#x0964;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keyLabel="&#x09CD;"
                latin:keyLabelFlags="fontNormal" />
         </default>
    </switch>
</merge>
